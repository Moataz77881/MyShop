@using MyShop.Entity.DTOS

@model List<OrderHeaderDto>
@{
	ViewBag.PageTitle = "order Managment";
	ViewBag.CardTitle = "Orders";
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<partial name="_Toastr">
	<body>

		<table class="table table-hover" width="100%">
			<tr>
				<td>Customer Name</td>
				<td>Phone number</td>
				<td>Email</td>
				<td>City</td>
				<td>Address</td>
				<td>Payment status</td>
				<td>Payment date</td>
				<td>Actions</td>
			</tr>
			@foreach (var order in Model)
			{
				<tr>
					<td>@order.applicationUserDTO.Name</td>
					<td>@order.applicationUserDTO.PhoneNumber</td>
					<td>@order.applicationUserDTO.Email</td>
					<td>@order.applicationUserDTO.City</td>
					<td>@order.applicationUserDTO.Address</td>
					<td>@order.paymentStatus</td>
					<td>@order.paymentDate</td>

					<td>
						<a href="/Admin/Order/Details/@order.Id" class="btn btn-dark"> Details</a>
						<a href="" class="btn btn-primary"> Arrived</a>

					</td>
				</tr>
			}
		</table>
	</body>
